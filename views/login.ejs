<body class text="">

    

	<main class="form-signin w-100 m-auto">
    <div class="p-5 mb-4 rounded-3">
	
	<h1 class="display-5 fw-bold loginHeadText">Sign in</h1>
	<% if (error) { %>
		<p class="errorMessage" style="color: red"><%= error %></p>
	<% } %>
    </div>
	<form method="post" action="/login">
		
		<div class="form-floating">
			<input type="email" class="form-control middle" name="email" required autofocus>
			<label for="first-name">Email</label>
		  </div>
		<br>
		<div class="form-floating">
			<input type="password" class="form-control middle" name="password" required>
			<label for="last-name">Password</label>
		  </div>
		<br>

		<div class="dropdown">
		
		<select id="role" name="role" required>
			<option value="admin">admin</option>
			<option value="principal">principal</option>
      <option value="user">student</option>
		</select>
		</div>
		<br>
		<button class="w-100 btn btn-lg btn-primary submit-button" type="submit">Login</button>
	</form>



</main>
<div class="girlImageLogin">
	<img src="/images/girl-books.png" class="card-img-top loginImagesGirl" alt="boy-books">


  </div>

  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</div>

</div>
