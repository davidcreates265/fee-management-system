<%- include("header") -%>

</* Header Section **/>

<%- include('navbar'); -%>

<main class="wholePage w-100 m-auto">
   
  
    <form class="form-container" action="/generate-report" method="POST">
      <div class="form-group">
        <label for="level" class="form-label">Level:</label>
        <select class="form-control" name="level">
          <option value="">Select Level</option>
          <option value="Primary School">Primary School</option>
          <option value="Secondary School">Secondary School</option>
        </select>
      </div>
  
      <div class="form-group">
        <label for="class" class="form-label">Class:</label>
        <select class="form-control" name="class">
          <option value="">Select Class</option>
          
            <option value="Grade 1">Grade 1</option>
            <option value="Grade 2">Grade 2</option>
            <option value="Grade 3">Grade 3</option>
            <option value="Grade 4">Grade 4</option>
            <option value="Grade 5">Grade 5</option>
            <option value="Grade 6">Grade 6</option>
          
            <option value="Form 1">Form 1</option>
            <option value="Form 2">Form 2</option>
            <option value="Form 3">Form 3</option>
            <option value="Form 4">Form 4</option>
            <option value="Form 5">Form 5</option>
        
        </select>
      </div>
  
      <div class="form-group">
        <label for="status" class="form-label">Fees Status:</label>
        <select class="form-control" name="status">
          <option value="">Select Status</option>
          <option value="Paid">Paid</option>
          <option value="Pending">Pending</option>
        </select>
      </div>
  
      <button class="btn btn-primary" type="submit">Generate</button>
    </form>
  
    <% if (report !== undefined) { %>
        <div class="report-container">
          <h2>Fee School Management System Report</h2>
          <% if (report !== '') { %>
            <table class="report-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Level</th>
                  <th>Class</th>
                  <th>Fees</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <!-- Loop through the students and display the data in rows -->
                <% students.forEach((student) => { %>
                  <tr>
                    <td><%= student.name %></td>
                    <td><%= student.level %></td>
                    <td><%= student.class %></td>
                    <td><%= student.fees %></td>
                    <td><%= student.status %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p class="no-students">No students found.</p>
          <% } %>
          <div class="report-actions">
            <button onclick="printReport()" class="btn btn-primary print-button">Print</button>
            
          </div>
        </div>
      <% } %>
      
  </main>



<script>
  function printReport() {
    window.print();
  }
</script>

<%- include("footer") -%>
